<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yao.mybatis.mapper.UserMapper">
    <resultMap id ="UserMap" type="com.yao.mybatis.entity.User">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="dept" property="dept"/>
        <result column="phone" property="phone"/>
        <result column="website" property="website"/>
    </resultMap>

    <select id = "getUserById" parameterType="int" resultType= "com.yao.mybatis.entity.User">
        select * from user where id = #{id}
    </select>

    <select id = "queryAllUsers" resultType= "com.yao.mybatis.entity.User">
        select * from user
    </select>

    <insert id = "insertUser" parameterType="com.yao.mybatis.entity.User" >
        insert into user (id,name,dept,phone,website) values (#{id},#{name},#{dept},#{phone},#{website})
    </insert>

    <update id="updateUser" parameterType="com.yao.mybatis.entity.User">
        update user set id = #{id}, name = #{name}, dept = #{dept}, phone = #{phone}, website = #{website} where id = #{id}
    </update>

</mapper>